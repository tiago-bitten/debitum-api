{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Mongo": {
      "ConnectionString": "mongodb://root:rootpassword@localhost:27017",
      "DatabaseName": "DebitumDb"
    },
    "Postgres": {
      "ConnectionString": "Host=localhost;Port=5432;Database=DebitumDb;Username=postgres;Password=postgres"
    }
  },
  "WhatsApp": {
    "Provider": "Evolution",
    "Evolution": {
      "BaseUrl": "http://localhost:8080",
      "ApiKey": "change-this-super-secret-key",
      "DefaultInstance": "debitum-instance",
      "TimeoutSeconds": 30
    }
  }
}
